@page
@model serverDashboard.Pages.IndexModel

<h1>DevOps Monitoring Dashboard</h1>

<h3>Client Instances</h3>
<table border="1" cellpadding="5">
    <tr>
        <th>Client</th>
        <th>Status</th>
        <th>CPU usage%</th>
        <th>RAM Used percentage</th>
        <th>Storage Used / Total</th>
        <th>Request Latency (ms)</th>
        <th>Error Rate (%)</th>
        <th>Docs Signed Last Hour</th>
    </tr>
@foreach (var c in Model.ClientInstances)
{
    <tr>
        <td>@c.ClientName</td>
        <td>@c.Status</td>
        <td>@c.CpuUsagePercent</td>
        <td>@c.RamUsedGb / @c.TotalRamGb</td>
        <td>@c.StorageUsedGb / @c.TotalStorageGb</td>
        <td>@c.RequestLatencyMs</td>
        <td>@c.ErrorRatePercent</td>
        <td>@c.DocumentsSignedLastHour</td>
    </tr>
}
</table>
